<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level"   value="1" />
        </attr>
        <attr name="flingVelocity" format="integer" />
        <attr name="minDistRequestDisallowParent" format="dimension" />
        <attr name="recorder_image_size" format="dimension"/>
        <attr name="remove_image_size" format="dimension"/>
        <attr name="recorder_image" format="reference"/>
        <attr name="remove_image" format="reference"/>
        <attr name="remove_position" format="string" />

    </declare-styleable>

</resources>